<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rojoapp"
    tools:context=".Model.Select_Activity">

    <include
        android:id="@+id/include"
        layout="@layout/action_bar_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/include"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/include">

        <ImageView
            android:id="@+id/ImageviewLog_Profesor"
            android:layout_width="196dp"
            android:layout_height="196dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/profe"
            app:civ_border_color="#FF000000"
            android:padding="10px"
            app:civ_border_width="2dp" />

        <Button
            android:id="@+id/Btn_Profesor"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Profesor"
            android:background="@drawable/rounded_button"
            android:backgroundTint="#055d5d"
            android:paddingTop="@dimen/cardview_default_elevation"
            android:layout_marginTop="14dp"
            android:textSize="25dp"
            android:textAllCaps="true"
            android:padding="10dp"/>

        <ImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ImageviewLog_Alumno"
            android:layout_width="196dp"
            android:layout_height="196dp"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:src="@drawable/alumno"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <Button
            android:id="@+id/Btn_Alumno"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:background="@drawable/rounded_button"
            android:text="Alumno"
            android:layout_marginTop="14dp"
            android:textAllCaps="true"
            android:textSize="25dp"
            android:padding="10dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>