<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_marginTop="16dp"
    android:backgroundTint="#FFFFFF"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Controller.Fragment_Profe1.Colegio_Prof_Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Primer diseño -->
            <TextView
                android:id="@+id/centeredTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="ATENCIÓN AL ALUMNO"
                android:layout_marginTop="50dp"
                android:textSize="25sp"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- CircleImageView -->
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageViewLeft"
                    android:layout_width="110dp"
                    android:layout_height="90dp"
                    android:src="@drawable/wsp"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/verticalTextView1_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NÚMERO DE CONTACTO"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/Text_llamarTelefono"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+51 924-146-636"
                        android:textSize="18sp"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

            <!-- Espaciador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Imageview_Correo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/correoss"
                    android:contentDescription="Imagen a la izquierda"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/verticalTextView2_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CORREO ELECTRONICO"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/TXT_EmailIntitucional"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:text="contactanos@sacooliveros.edu.pe"
                        android:textSize="18sp"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

            <!-- Espaciador -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ImageMap_View"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ubicaciongps"
                    android:contentDescription="Imagen a la izquierda"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/verticalTextView3_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SEDE CENTRAL"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/TXT_MapsUbication"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jr. Manuel Gómez 245 (alt cdra. 15 de la av. Arenales)."
                        android:textSize="18sp"
                        android:textColor="#000000" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    </LinearLayout>


