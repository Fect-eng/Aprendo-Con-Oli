<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo sólido de color azul oscuro -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#174BCD"/> <!-- Color de fondo del menú -->
            <!-- Esquinas ovaladas para la parte superior e inferior -->
            <corners android:radius="16dp" /> <!-- Radio de las esquinas -->
        </shape>
    </item>

    <!-- Sombra en el borde -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Fondo transparente para sombra -->
            <stroke android:width="0dp" android:color="#000000"/> <!-- No bordes, solo sombra -->
            <corners android:radius="16dp"/> <!-- Radio de las esquinas de la sombra -->
            <padding android:left="5dp" android:top="5dp" android:right="5dp" android:bottom="5dp"/> <!-- Espaciado para la sombra -->
        </shape>
    </item>

    <!-- Borde blanco en la parte superior e inferior -->
    <item android:left="10dp" android:right="10dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="10dp" android:color="#FFFFFF"/> <!-- Color y grosor del borde -->
            <corners android:radius="16dp"/> <!-- Radio de las esquinas para bordes -->
        </shape>
    </item>

    <!-- Borde blanco en la parte inferior -->
    <item android:left="10dp" android:right="10dp" android:top="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <stroke android:width="10dp" android:color="#FFFFFF"/> <!-- Color y grosor del borde -->
            <corners android:radius="16dp"/> <!-- Radio de las esquinas para bordes -->
        </shape>
    </item>
</layer-list>
